using System;
using System.Xml.Schema;
class program
{
    static void Main(string[] args)
    {
        int i, leng,ind;
        Console.WriteLine("Enter the number for array ");
        leng=int.Parse(Console.ReadLine());
        int[] arr = new int[leng];
        Console.WriteLine("Enter the array:");
        for(i=0;i<leng; i++)
            arr[i]=int.Parse(Console.ReadLine());
        Console.WriteLine("Enterr the index");
        ind=int.Parse (Console.ReadLine());
        try
        {
            Console.WriteLine("the value is " + arr[ind]);
        }
        catch (Exception e)
        {
            Console.WriteLine("Arry out of bound");
        }
        finally {
            Console.WriteLine("code is done");
         
        }
        Console.ReadLine ();

    }
}
